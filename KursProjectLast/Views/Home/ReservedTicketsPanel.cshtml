@model List<TicketToListDTO>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Reserved</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<script src="https://kit.fontawesome.com/d97b87339f.js" crossorigin="anonymous"></script>
<script src="/js/ReservedTickets/main.js" type="text/javascript"></script>

	<link rel="stylesheet" type="text/css" href="/css/ReservedTickets/main.css">
</head>
<body>
<section>
  <!--for demo wrap-->
  <h1>Reserved Tickets</h1>
        @using (Html.BeginForm("SearchTicket","Home",FormMethod.Get,new {@class = "search-box"}))
        {
            @Html.TextBox("text",null,new {@class = "search-input", @type = "text", @placeholder = "Search ticket..", @required = ""})  <button type="submit" class="search-btn"><i class="fas fa-search"></i></button>
        }

  <div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>Ticket No</th>
          <th>Passenger Name</th>
          <th>Passenger Surname</th>
          <th>Passenger Fin Code</th>
          <th>Passenger Phone</th>
          <th>From</th>
          <th>To</th>
          <th>Airline</th>
          <th>Price</th>
          <th>Departure</th>
          <th></th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
          @foreach (var ticket in Model)
          {
          <tr>
          <td>@ticket.TicketId</td>
          <td>@ticket.Passenger.Name</td>
          <td>@ticket.Passenger.Surname</td>
          <td>@ticket.Passenger.FinCode</td>
          <td>@ticket.Passenger.PhoneNumber</td>
          <td>@ticket.Flight.From.CityName</td>
          <td>@ticket.Flight.To.CityName</td>
          <td>@ticket.Flight.Airline.AirlineName</td>
          <td>@ticket.Flight.Price AZN</td>
          <td>@ticket.Flight.Departure</td>
          <td>@Html.ActionLink("Show", "ShowTicket", "Home", new { id = ticket.TicketId}, new {@class = "btn btn-success", @type = "button"})</td>
          </tr>
          }
      </tbody>
    </table>
  </div>
</section>

</body>
</html>